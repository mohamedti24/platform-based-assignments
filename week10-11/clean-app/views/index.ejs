<!DOCTYPE html>
<html>
<head>
    <title>User List</title>
    <style>
        table {
            width: 50%;
            margin-top: 20px;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #333;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        a {
            text-decoration: none;
            padding: 8px 12px;
            background: #4CAF50;
            color: white;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>User List</h1>

    <a href="/register">Register New User</a>

    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>
        </tr>

        <% users.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.name %></td>
            </tr>
        <% }); %>

    </table>
</body>
</html>
